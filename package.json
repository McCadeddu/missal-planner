{
  "name": "missal-planner",
  "version": "0.0.6",
  "author": {
    "name": "Marco Cadeddu",
    "email": "marco.cadeddu@villaregia.org"
  },
  "type": "module",
  "main": "electron/main.cjs",

  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",

    "electron": "electron electron/main.cjs",
    "dev-electron": "concurrently \"npm run dev\" \"npm run electron\"",

    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux",
    "dist:mac": "npm run build && electron-builder --mac"
  },

  "dependencies": {
    "cheerio": "^1.1.2",
    "cors": "^2.8.5",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "express": "^5.1.0",
    "html2pdf.js": "^0.12.1",
    "jsdom": "^27.2.0",
    "node-fetch": "^3.3.2",
    "papaparse": "^5.5.3",
    "qrcode": "^1.5.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.10.1"
  },

  "devDependencies": {
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "vite": "^7.2.2"
  },

  "build": {
    "appId": "com.missalplanner.app",
    "productName": "MissalPlanner",

    "directories": {
      "output": "release",
      "buildResources": "build"
    },

    "files": [
      "dist/**/*",
      "electron/**/*"
    ],

    "publish": [
      {
        "provider": "github",
        "owner": "McCadeddu",
        "repo": "missal-planner"
      }
    ],

    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Office",
      "icon": "build/icons/icon.png"
    },

    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icons/icon.png"
    },

    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "MissalPlanner",
      "deleteAppDataOnUninstall": false
    },

    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "build/icons/icon.png"
    }
  }
}
